<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="8dp"
    android:background="@color/background_pitch">

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/tiffin_img"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/menu_name_text_view_user"
            android:textColor="@color/black"
            tools:text="Menu Name"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="2dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/display_items_text_view_customer"
            android:textColor="@color/black"
            tools:text="Abcde"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.5"

        >
         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/ic_baseline_add_24"
             android:id="@+id/addition_button"
             android:padding="2sp"
         />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:textColor="@color/black"
              android:id="@+id/number_tobeadded"
              android:text="0"
              />

          <ImageView
              android:padding="2sp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/subtraction_button"
              android:src="@drawable/ic_baseline_indeterminate_check_box_24"/>
          </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">


            <TextView
                android:id="@+id/menu_rate_for_customer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:textColor="#1B5E20"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Rs 100/-" />

            <ImageView
                android:id="@+id/veg_nonveg_type"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"

                />

        </RelativeLayout>

    </LinearLayout>

    </LinearLayout>
